<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="70dp"
    android:paddingRight="16dp"
    tools:context=".generalFragments.DiaryFragment">


    <Button
        android:id="@+id/sheduleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="Расписание"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/marksButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorButton"
        android:text="Оценки"
        app:layout_constraintEnd_toEndOf="@+id/sheduleButton"
        app:layout_constraintStart_toStartOf="@+id/sheduleButton"
        app:layout_constraintTop_toBottomOf="@+id/sheduleButton" />
</androidx.constraintlayout.widget.ConstraintLayout>