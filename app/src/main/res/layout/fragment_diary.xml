<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="70dp"
    android:paddingRight="16dp"
    tools:context=".generalFragments.DiaryFragment">


    <TextView
        android:id="@+id/diaryStaticTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Электронный дневник:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/diaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="@+id/diaryStaticTextView"
        app:layout_constraintEnd_toStartOf="@+id/deleteDiaryButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/diaryStaticTextView"
        app:layout_constraintTop_toTopOf="@+id/diaryStaticTextView" />

    <Button
        android:id="@+id/deleteDiaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonReject"
        android:padding="12dp"
        android:text="Удалить дневник"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/diaryTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diaryTextView" />

    <Button
        android:id="@+id/sheduleButton"
        android:textColor="@color/colorButtonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/simple_button"
        android:text="Расписание"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaryStaticTextView" />

    <Button
        android:id="@+id/marksButton"
        android:textColor="@color/colorButtonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/simple_button"
        android:text="Оценки"
        app:layout_constraintEnd_toEndOf="@+id/sheduleButton"
        app:layout_constraintStart_toStartOf="@+id/sheduleButton"
        app:layout_constraintTop_toBottomOf="@+id/sheduleButton" />
</androidx.constraintlayout.widget.ConstraintLayout>