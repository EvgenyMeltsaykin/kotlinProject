<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routesChild"
    app:startDestination="@id/childMainFragment">

    <fragment
        android:id="@+id/childMainFragment"
        android:name="com.diplom.kotlindiplom.child.ChildMainFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_child_main" />
    <fragment
        android:id="@+id/childSheduleFragment"
        android:name="com.diplom.kotlindiplom.child.SheduleFragment"
        android:label="Расписание"
        tools:layout="@layout/fragment_child_shedule" />
    <fragment
        android:id="@+id/childMyProfileFragment"
        android:name="com.diplom.kotlindiplom.child.ChildMyProfileFragment"
        android:label="fragment_my_profile"
        tools:layout="@layout/fragment_child_my_profile" >
        <action
            android:id="@+id/action_childMyProfileFragment_to_childMainFragment2"
            app:destination="@id/childMainFragment"
            app:popUpTo="@id/childMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/childMarksFragment"
        android:name="com.diplom.kotlindiplom.child.MarksFragment"
        android:label="fragment_child_marks"
        tools:layout="@layout/fragment_child_marks" />
    <fragment
        android:id="@+id/childTasksFragment"
        android:name="com.diplom.kotlindiplom.child.ChildTasksFragment"
        android:label="fragment_child_tasks"
        tools:layout="@layout/fragment_child_tasks" />
    <fragment
        android:id="@+id/childAllTasksFragment"
        android:name="com.diplom.kotlindiplom.child.ChildAllTasksFragment"
        android:label="fragment_child_all_tasks"
        tools:layout="@layout/fragment_child_all_tasks" >
        <argument
            android:name="titile"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/childTaskContentFragment"
        android:name="com.diplom.kotlindiplom.child.ChildTaskContentFragment"
        android:label="fragment_child_task_content"
        tools:layout="@layout/fragment_child_task_content" />
    <fragment
        android:id="@+id/weekdayFragment"
        android:name="com.diplom.kotlindiplom.generalFragments.WeekdayFragment"
        android:label="fragment_weekday"
        tools:layout="@layout/fragment_weekday" >
        <action
            android:id="@+id/action_weekdayFragment_to_childSheduleFragment"
            app:destination="@id/childSheduleFragment" />
        <action
            android:id="@+id/action_weekdayFragment_to_weekdayWithoutDiaryFragment"
            app:destination="@id/weekdayWithoutDiaryFragment" />
        <action
            android:id="@+id/action_weekdayFragment_to_sheduleDayFragment"
            app:destination="@id/sheduleDayFragment" />
    </fragment>
    <fragment
        android:id="@+id/weekdayWithoutDiaryFragment"
        android:name="com.diplom.kotlindiplom.generalFragments.WeekdayWithoutDiaryFragment"
        android:label="fragment_weekday_without_diary"
        tools:layout="@layout/fragment_weekday_without_diary" >
        <action
            android:id="@+id/action_weekdayWithoutDiaryFragment_to_weekdayFragment"
            app:destination="@id/weekdayFragment" />
    </fragment>
    <fragment
        android:id="@+id/sheduleDayFragment"
        android:name="com.diplom.kotlindiplom.generalFragments.SheduleDayFragment"
        android:label="fragment_shedule_day"
        tools:layout="@layout/fragment_shedule_day" >
        <argument android:name="day"
            app:argType="string" />
    </fragment>
</navigation>